{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<div class="container-fluid" style="margin-top: 150px">
  <div class="row justify-content-center">
    <div class="col-md-4">  </div>
    <div class="col-md-8" style="display: flex;align-items: center;justify-content: center"> 
     <div class="card">
        <div class="card-body">
          <h4 class="card-title">Liste des Produits</h4>
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Nom du produit</th>
                  <th>Prix du produit</th>
                  <th>Description du produit</th>
                  <th>Quantité du produit</th>
                  <th>Image du produit</th>
                  <th>Catégorie du produit</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
                </tr>
              </thead>
              <tbody>
                {% for produit in p %}
                <tr>
                  <td>{{ produit.nomProd }}</td>
                  <td>{{ produit.prixProd }}</td>
                  <td>{{ produit.descriptionProd }}</td>
                  <td>{{ produit.quantiteProd }}</td>
                  <td>       {% if produit.getImageProd() %}
                            <img src="{{ asset('assets/' ~ produit.getImageProd()) }}" alt="Image du produit" style="width: 250px; height: 250px; object-fit: cover;">
                                    {% else %}
                                        No Image
                                    {% endif %}</td>
                  <td>{{ produit.idCategorie }}</td>
                  <td>
                    <a href="{{ path('editProduit',{'id':produit.id}) }}" class="btn btn-primary btn-sm">Modifier
                    
                    </a>
                  </td>
                  <td>
                 <a href="{{ path('suppProduit',{'id':produit.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
