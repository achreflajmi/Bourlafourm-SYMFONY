{% extends 'base.html.twig' %}

{% block body %}
    <!-- ======= Hero Section ======= -->
    <!-- ======= Hero Section ======= -->

    <div style="position: inherit;left: 120px;bottom: 75px;"" >
        <div class="row" style="overflow-y:hidden;">
            
            <div class="col-md">

    <section id="heroAdd" class="d-flex align-items-center"style="padding-top: 40px;">
        

        <div class="container">
            <div class="card o-hidden border-0 shadow-lg my-lg-5" style="width: 1150px;  height: 600px; ">
                
                <div class="card-body p-0"style="overflow-y: scroll; overflow-x: hidden;">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">

                            {{ form_start(EVE, {'attr': {'novalidate': 'novalidate'}}) }}
                                <h1 class="h4 text-gray-900 mb-4">Modifier Evenement</h1>
                                
                            <div class="form-group">

                                {{ form_label(EVE.NomEvent,'Le Nom de l evenement') }}
                                {{ form_errors(EVE.NomEvent) }}
                                {{ form_widget(EVE.NomEvent, {attr: {class: 'form-control' }}) }}

                            </div>
                            <div class="form-group">{{ form_row(EVE.Type, {attr: {class: 'form-control form-control-user'}}) }}</div>
                            <div class="form-group">{{ form_row(EVE.organisateur, {attr: {class: 'form-control form-control-user'}}) }}</div>
                            <div class="form-group">{{ form_row(EVE.Date_deb, {attr: {class: 'form-control form-control-datepicker'}}) }}</div>
                            <div class="form-group">{{ form_row(EVE.Date_fin, {attr: {class: 'form-control form-control-datepicker'}}) }}</div>
                            <div class="form-group">{{ form_row(EVE.Capacite, {attr: {class: 'form-control form-control-user'}}) }}</div>
                            <div class="form-group">{{ form_row(EVE.Image, {attr: {class: 'form-control form-control-user'}}) }}</div>

                                <hr>

                                <button class="btn btn-primary btn-lg btn-block" type="submit">Modifier Evenement</button>
                                <a href="/ListEve" class="btn btn-danger btn-lg btn-block">Cancel</a>

                                <div align="center"> {{ form_end(EVE)}}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
    </section><!-- End Hero -->
{% endblock  %}