{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
<div class="container-fluid mt-3" style="margin-top: 150px">
  <div style="  display: flex;
    flex-wrap: wrap;
    margin-left: 600px;
    margin-top: 100px;">
    <div> 
     <div class="card">

        <div class="card-body">
              <div style="  display: flex;
    flex-wrap: wrap;
    justify-content: center;">
    <div> 
          <h4 class="card-title">Liste des categories</h4>
              <a href="{{ path('addCategorie') }}" class="btn btn-primary btn-sm">Ajouter une catégorie</a> 
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Nom du categorie</th>
                  <th>Description de la catégorie</th>
                  <th>Type de categorie</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
                </tr>
              </thead>
              <tbody>
                {% for categorie in c %}
                <tr>
                  <td>{{ categorie.nom_categorie }}</td>
                  <td>{{ categorie.description_categorie }}</td>
                  <td>{{ categorie.type_categorie }}</td>
                  <td>
                    <a href="{{ path('editCategorie',{'id':categorie.id}) }}" class="btn btn-primary btn-sm">Modifier
                    
                    </a>
                  </td>
                  <td>
                 <a href="{{ path('suppCategorie',{'id':categorie.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>                  </td>

                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
