
{% extends 'base.html.twig' %}

{% block title %}ADMIN DASHBOARD
{% endblock %}

{% block body %}
     <div class="content-body">

            <div class="container-fluid mt-3">
                <div class="row">

<div class="container">
  <h1 class="text-center mb-4">User</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table">
        <tbody>
          <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
          </tr>
          <tr>
            <th>Email</th>
            <td>{{ user.email }}</td></td>
            
          </tr>
          <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
          </tr>
          <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
          </tr>
        </tbody>
      </table>
      <div>
            <td><img src="https://api.qrserver.com/v1/create-qr-code/?data={{ user.email }}" alt="QR code for {{ user.email }}" /></td>
            </div>
    </div>
  </div>



  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="d-flex justify-content-between">
        <a href="{{ path('test') }}" class="btn btn-secondary">Back to list</a>
        <div>
          <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary mr-3">Edit</a>
          {{ include('user/_delete_form.html.twig') }}
        </div>
      </div>
    </div>
  </div>
</div>
            </div>
                        </div>
                    </div>

	
{% endblock %}