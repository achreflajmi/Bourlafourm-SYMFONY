{% extends 'base.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
<div class="container-fluid" style="margin-top: 150px">
  <div class="row justify-content-center">
    <div class="col-md-4">  </div>
    <div class="col-md-8" style="display: flex;align-items: center;justify-content: center"> 
     <div class="card">
        <div class="card-body">
          <h4 class="card-title">Liste des categories</h4>
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Nom du categorie</th>
                  <th>Description de la cat√©gorie</th>
                  <th>Type de categorie</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
                </tr>
              </thead>
              <tbody>
                {% for categorie in c %}
                <tr>
                  <td>{{ categorie.nom_categorie }}</td>
                  <td>{{ categorie.description_categorie }}</td>
                  <td>{{ categorie.type_categorie }}</td>
                  <td>
                    <a href="{{ path('editCategorie',{'id':categorie.id}) }}" class="btn btn-primary btn-sm">Modifier
                    
                    </a>
                  </td>
                  <td>
                 <a href="{{ path('suppCategorie',{'id':categorie.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>                  </td>

                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
