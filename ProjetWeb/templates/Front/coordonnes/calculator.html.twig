{% extends 'baseFront.html.twig' %}

{% block title %}Calculatrice{% endblock %}

{% block body %}

    <br><br> <br><br> <br><br> <br><br>

 
    <h1 class="text-center mb-4">Calculatrice</h1>
<h5 class="text-center mb-4">IMC = poids (en kg)/taille² (en m)</h5>
    <div class="row justify-content-center">
        <div class="col-md-6 order-md-2">
            <form method="post" action="{{ path('calculate_expression') }}" novalidate class="text-center">
                <div class="form-group">
                    <input type="text" class="form-control" name="expression" placeholder="Entrez votre expression mathématique" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block mb-3">Calculer</button>
            </form>
        </div>
    </div>

    {% if result is defined %}
    <div class="row justify-content-center">
        <div class="col-md-6 order-md-2">
            <div class="alert alert-success" role="alert">
                Résultat : {{ result }}
            </div>
        </div>
    </div>
    {% endif %}
     <!-- Bouton pour naviguer vers la page createCoordonnees -->
    <div class="row justify-content-center">
        <div class="col-md-6 order-md-2">
            <a href="{{ path('create_coordonnees') }}" class="btn btn-primary btn-block mb-3">Ajouter Coordonnées</a>
        </div>
    </div>
</div>
